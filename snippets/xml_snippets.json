        "prefix": "<report>",
        "body": [
            "<template id=\"${1:report_template_name}\">",
            "\t<t t-call=\"web.html_container\">",
            "\t\t<t t-foreach=\"docs\" t-as=\"doc\">",
            "\t\t\t<t t-call=\"web.${2|external,internal|}_layout\">",
            "\t\t\t\t<div class=\"page\">",
            "\t\t\t\t\t${0}",
            "\t\t\t\t</div>",
            "\t\t\t</t>",
            "\t\t</t>",
            "\t</t>",
            "</template>"
        ],
        "description": "Add report template"
    },
