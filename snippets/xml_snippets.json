    "Form view": {
        "prefix": "ooform",
        "body": [
            "<record id=\"${1:model_name}_view_form\" model=\"ir.ui.view\">",
            "\t<field name=\"name\">${2:model.name}.view.form</field>",
            "\t<field name=\"model\">${2:model.name}</field>",
            "\t<field name=\"arch\" type=\"xml\">",
            "\t\t<form string=\"${3}\">",
            "\t\t\t<sheet>",
            "\t\t\t\t<group>",
            "\t\t\t\t\t${0}",
            "\t\t\t\t</group>",
            "\t\t\t</sheet>",
            "\t\t</form>",
            "\t</field>",
            "</record>"
        ],
        "description": "Add form view"
    },
