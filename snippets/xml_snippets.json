    },
    "Chatter": {
        "prefix": "oochatter",
        "body": [
            "<div class=\"oe_chatter\">",
            "\t<field name=\"message_follower_ids\" widget=\"mail_followers\"/>",
            "\t<field name=\"activity_ids\" widget=\"mail_activity\"/>",
            "\t<field name=\"message_ids\" widget=\"mail_thread\"/>",
            "</div>"
