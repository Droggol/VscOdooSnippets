        "description": "Add record"
    },
    "Function": {
        "prefix": "oofunction",
        "body": [
            "<function model=\"${1:model.name}\" name=\"${2:method_name}\" eval=\"[ref('${3:record_id}')]\">",
            "</function>"
        ],
        "description": "Add function"
    },
